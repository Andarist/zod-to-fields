{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "types": ["jest"],
    "lib": ["esnext", "dom"],
    "moduleDetection": "force",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["src/*.ts", "__tests__/*.ts"],

  "exclude": ["node_modules", "**/node_modules", "build", "coverage"]
}
