{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["jest"],
    "lib": ["esnext", "dom"],

    /* Path Aliases */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Strictness and Type Checking */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    /* Emit */
    "declaration": true,
    "outDir": "build",
    "rootDir": "./src",

    /* Optimizations */
    "skipLibCheck": true, //skip checking .d.ts files
    "incremental": true
  },
  "include": ["**/*.ts"],

  "exclude": ["node_modules", "**/node_modules", "build", "coverage"]
}
